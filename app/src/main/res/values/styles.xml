<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="errorToast">
        <item name="stColorBackground">#ff5e64</item>
        <item name="stTextColor">#fff6f6</item>
        <item name="stStrokeColor">#000</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="fontFamily">@font/luginafplight</item>
        <item name="stLength">SHORT</item>
        <item name="cornerRadius">3dp</item>
    </style>
</resources>